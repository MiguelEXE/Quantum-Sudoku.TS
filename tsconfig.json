{
    "compilerOptions": {
        "lib": ["ES2022", "DOM"],
        "target": "ES2022",
        "module": "ES6",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "outDir": "dist/"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}